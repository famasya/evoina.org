---
import { Facebook, Instagram, Linkedin, Twitter, Youtube } from "@lucide/astro";
import type { Translations } from "../i18n";

interface Props {
  translations: Translations;
}

const { translations } = Astro.props;
const year = new Date().getFullYear();
---

<div
  class="w-full py-10 text-gray-900 font-sans border-t border-gray-200"
>
  <div
    class="flex container mx-auto px-8 md:px-0 flex-col md:flex-row md:justify-between md:items-start gap-10 md:gap-0"
  >
    <!-- Left side: Logos and description -->
    <div class="md:w-1/3 flex flex-col gap-4">
      <div class="flex items-center gap-4">
        <img
          src="/ises1.png"
          alt="The Royal Society Logo"
          class="h-auto w-48"
        />
      </div>
      <p class="text-sm leading-relaxed max-w-xs">
        Evoina is a collective of Indonesiaâ€™s leading minds in evolutionary
        science, dedicated to advancing research, education, and public
        understanding of evolution.
      </p>
    </div>

    <!-- Right side: Links columns -->
    <div class="md:w-2/3 flex justify-start md:justify-end text-sm">
      <div class="flex flex-col gap-2">
        <h3 class="font-semibold mb-2">Useful links</h3>
        <a href="#" class="hover:underline">About</a>
        <a href="#" class="hover:underline">Programs</a>
        <a href="#" class="hover:underline">Committee Chairs</a>
        <a href="#" class="hover:underline">Resources</a>
        <a href="#" class="hover:underline">Archives</a>
      </div>
    </div>
  </div>

  <!-- Bottom row: Follow us and copyright -->
  <div
    class="mt-10 flex container mx-auto px-8 md:px-0 flex-col md:flex-row md:justify-between md:items-center text-sm text-gray-700"
  >
    <div class="flex items-center gap-4 mb-4 md:mb-0">
      <span class="font-semibold">Follow us</span>
      <a href="#" aria-label="Facebook" class="hover:text-gray-900">
        <Facebook name="facebook" class="w-5 h-5" />
      </a>
      <a href="#" aria-label="X" class="hover:text-gray-900">
        <Twitter name="twitter" class="w-5 h-5" />
      </a>
      <a href="#" aria-label="LinkedIn" class="hover:text-gray-900">
        <Linkedin name="linkedin" class="w-5 h-5" />
      </a>
      <a href="#" aria-label="Instagram" class="hover:text-gray-900">
        <Instagram name="instagram" class="w-5 h-5" />
      </a>
      <a href="#" aria-label="YouTube" class="hover:text-gray-900">
        <Youtube name="youtube" class="w-5 h-5" />
      </a>
    </div>
  </div>
  <div
    class="w-full container mx-auto px-8 md:px-0 flex flex-col items-center gap-4 mb-4 md:mb-0 border-t border-gray-200 mt-4"
  >
    <p>
      &copy; {year} evoina.org
    </p>
  </div>
</div>
