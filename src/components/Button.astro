---
interface Props {
  title: string;
  href?: string;
  extendClass?: string;
}

const { title, href, extendClass } = Astro.props;
---

<a
  href={href}
  class={`md:px-4 px-2 py-3 rounded-lg mt-10 text-eggshell bg-brunswick_green shadow-md hover:bg-brunswick_green/90 select-none
 ${extendClass}`}>{title}</a
>
