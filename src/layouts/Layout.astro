---
import "@fontsource-variable/inter";
import { ClientRouter } from "astro:transitions";
import Footer from "../components/footer.astro";
import Header from "../components/header.astro";
import {
  getLocaleFromUrl,
  loadTranslations,
  type SupportedLocale,
} from "../i18n/translate";

interface Props {
  title: string;
}

const { title } = Astro.props;

// Get current locale from URL
const currentLocale: SupportedLocale = getLocaleFromUrl(Astro.url);

// Load translations for the current locale
const translations = await loadTranslations(currentLocale);
---

<!doctype html>
<html lang={currentLocale}>
  <head>
    <ClientRouter />
    <meta charset="UTF-8" />
    <meta name="description" content={translations.meta.site_description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title} - {translations.meta.site_title}</title>
  </head>
  <body class="font-inter h-full min-h-screen">
    <Header currentLocale={currentLocale} translations={translations} />
    <slot />
    <Footer currentLocale={currentLocale} translations={translations} />
  </body>
</html>
<style is:global>
  h1 {
    @apply text-xl md:text-3xl font-normal;
  }
  p {
    @apply mt-4 font-light;
  }
  .auto-padding {
    @apply px-8 md:px-16 lg:px-16;
  }
  p a {
    @apply underline underline-offset-2;
  }

  main {
    @apply min-h-48;
  }
</style>
