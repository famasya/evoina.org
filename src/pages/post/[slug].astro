---
import { getCollection, type CollectionEntry } from "astro:content";
import PostHeader from "../../components/PostHeader.astro";
import { getLocaleFromUrl, loadTranslations } from "../../i18n";
import Layout from "../../layouts/Layout.astro";

export async function getStaticPaths() {
  // Get all archive entries for English locale only
  const allArchiveEntries = await getCollection("archives", ({ data }) => {
    return data.locale === "en";
  });

  // Generate paths for English entries
  return allArchiveEntries.map((entry: CollectionEntry<"archives">) => ({
    params: { slug: entry.slug.split("/").pop() || entry.slug },
    props: { entry },
  }));
}

type Props = {
  entry: CollectionEntry<"archives">;
};

const { entry } = Astro.props;
const { Content } = await entry.render();

// Get current locale from URL
const currentLocale = getLocaleFromUrl(Astro.url);
const translations = await loadTranslations(currentLocale);

// Get the click to enlarge text based on locale
const clickToEnlargeText =
  currentLocale === "id" ? "Klik untuk memperbesar" : "Click to enlarge";
---

<Layout title={entry.data.title}>
  <PostHeader
    title={entry.data.title}
    category={entry.data.category}
    pubDate={entry.data.pubDate}
    background={entry.data.image}
  />
  <article class="auto-padding">
    <div class="prose lg:prose-xl text-lg max-w-none text-wrap mt-8">
      {
        entry.data.image && (
          <div class="w-64 float-right bg-eggshell-500 p-2">
            <a href={entry.data.image} target="_blank">
              <img
                src={entry.data.image}
                alt={entry.data.title}
                class="w-full h-auto object-cover rounded-lg mb-1"
              />
              <div class="text-xs text-center hover:text-brunswick_green transition-colors">
                {clickToEnlargeText}
              </div>
            </a>
          </div>
        )
      }
      <Content />
    </div>
  </article>
</Layout>
