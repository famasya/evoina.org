---
import Button from "../components/button.astro";
import Header from "../components/header.astro";
import Hero from "../components/hero.astro";
import Layout from "../layouts/layout.astro";
import News from "./index/news.astro";
import ResearchActivities from "./index/research-activities.astro";
---

<Layout title="The Nature Place Day Camp">
  <Header />
  <Hero />
  <div class="m-16 flex flex-col md:flex-row items-center gap-8">
    <div class="relative w-full md:w-1/2">
      <img
        src="/carousels/Cuora_amboinensis_NurHerjayanti.JPG"
        class="h-full w-full object-cover rounded-xl"
      />
      <div
        class="absolute inset-0 bg-gradient-to-tl rounded-xl from-black/60 to-transparent"
      >
      </div>
    </div>
    <div class="w-full md:w-1/2">
      <h1 class="mb-8 font-serif text-2xl md:text-4xl">
        Welcome to the Indonesian Society for Evolutionary Studies (ISES)
      </h1>
      <p class="text-base md:text-lg">
        We provide a forum for researchers and students interested in advancing
        our understanding of the origin, evolution, and maintenance of
        biodiversity in Indonesia. Our society is dedicated to supporting
        collaborative research and promote dialogue across evolutionary-related
        disciplines and enhance public understanding of our field.
      </p>
      <div class="mt-8">
        <Button title="What We Do" extendClass="px-8" />
      </div>
    </div>
  </div>

  <ResearchActivities />
  <News />
</Layout>
