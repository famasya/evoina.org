// Add client-side JavaScript for carousel functionality
const carouselScript = `
  document.addEventListener('DOMContentLoaded', () => {
    const carousel = document.querySelector('.carousel-container');
    const prevBtn = document.querySelector('.carousel-prev');
    const nextBtn = document.querySelector('.carousel-next');
    const items = document.querySelectorAll('.carousel-item');
    let itemWidth = 0;
    let currentIndex = 0;
    let isScrolling = false;
    let visibleItems = window.innerWidth < 768 ? 1 : 3; // 1 item on mobile, 3 on desktop

    // Enable smooth scrolling
    carousel.style.scrollBehavior = 'smooth';
    carousel.style.overflowX = 'auto';

    function updateButtons() {
      prevBtn.disabled = currentIndex === 0;
      nextBtn.disabled = currentIndex >= items.length - visibleItems;
    }

    function scrollToItem(index) {
      isScrolling = true;
      const targetScroll = index * itemWidth;
      carousel.scrollLeft = targetScroll;
      
      // Reset the scrolling flag after the scroll completes
      setTimeout(() => {
        isScrolling = false;
      }, 500); // Match this with your CSS transition time
    }

    prevBtn.addEventListener('click', () => {
      if (currentIndex > 0) {
        currentIndex--;
        scrollToItem(currentIndex);
        updateButtons();
      }
    });

    nextBtn.addEventListener('click', () => {
      if (currentIndex < items.length - visibleItems) {
        currentIndex++;
        scrollToItem(currentIndex);
        updateButtons();
      }
    });

    // Initialize carousel
    updateCarousel();
    
    // Update on window resize
    let resizeTimer;
    window.addEventListener('resize', () => {
      clearTimeout(resizeTimer);
      resizeTimer = setTimeout(() => {
        const newVisibleItems = window.innerWidth < 768 ? 1 : 3;
        if (newVisibleItems !== visibleItems) {
          visibleItems = newVisibleItems;
          updateCarousel();
        }
      }, 250);
    });
    
    function updateCarousel() {
      // Update item width based on screen size
      const isMobile = window.innerWidth < 768;
      itemWidth = items[0].offsetWidth + (isMobile ? 16 : 32);
      
      // Reset to first item on breakpoint change
      currentIndex = 0;
      scrollToItem(0);
      updateButtons();
    }
  });
`;
