---
import { Check, Database, Users } from "@lucide/astro";
import { getCollection, type CollectionEntry } from "astro:content";
import PageTitle from "../../components/PageTitle.astro";
import {
  getLocaleFromUrl,
  getLocalizedUrl,
  loadTranslations,
} from "../../i18n";

// Get current locale from URL
const currentLocale = getLocaleFromUrl(Astro.url);
const translations = await loadTranslations(currentLocale);

// Get all archive posts and sort by publication date (newest first)
const allPosts = await getCollection(
  "archives",
  ({ data }) => data.locale === currentLocale,
);
const sortedPosts = allPosts.sort(
  (a: CollectionEntry<"archives">, b: CollectionEntry<"archives">) =>
    b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);

// Get the latest 5 posts for the news section
const latestNews = sortedPosts.slice(0, 5);

// Get localized date format
const dateLocale = currentLocale === "id" ? "id-ID" : "en-US";
---

<div>
  <div class="flex flex-row items-center justify-center gap-8">
    <h2 class="font-serif text-3xl mb-4 bg-eggshell-500 px-4 py-1">
      {translations.labels.latest_news}
    </h2>
  </div>
  <section class="py-12">
    <div class="container mx-auto px-8 md:px-0">
      <ul class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 mb-8">
        {
          latestNews.map((post) => (
            <li>
              <a
                href={getLocalizedUrl(
                  `/post/${post.slug.split("/").pop()}`,
                  currentLocale,
                )}
                class="block border border-gray-200 rounded-lg overflow-hidden hover:shadow-lg transition-shadow flex flex-col h-full"
              >
                {post.data.image && (
                  <img
                    src={post.data.image}
                    alt={post.data.title}
                    class="w-full h-48 object-cover"
                  />
                )}
                <div class="p-6 flex-grow">
                  <p class="text-sm text-gray-500 mb-2">{post.data.category}</p>
                  <h2 class="text-2xl font-serif mb-2">{post.data.title}</h2>
                  <p class="text-gray-600 mb-2">
                    {post.data.pubDate.toLocaleDateString(dateLocale, {
                      year: "numeric",
                      month: "long",
                      day: "numeric",
                    })}
                  </p>
                  <p class="text-lg">{post.data.description}</p>
                </div>
              </a>
            </li>
          ))
        }
      </ul>
      <div class="text-center mb-12">
        <a
          href={getLocalizedUrl("archives", currentLocale)}
          class="inline-flex items-center px-6 py-3 bg-eggshell-400 hover:bg-eggshell-300 text-night rounded-lg font-medium transition-colors duration-200 shadow-sm hover:shadow-sm"
        >
          {translations.buttons.read_all_news}
          <svg
            class="w-5 h-5 ml-2"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
          </svg>
        </a>
      </div>
    </div>

    <div class="container mx-auto px-8 md:px-0">
    <div
      class="bg-gradient-to-r from-brunswick_green to-brunswick_green-600 rounded-2xl p-8 md:p-12 text-white"
    >
      <div class="max-w-4xl mx-auto text-center">
        <h3 class="font-serif text-2xl md:text-3xl mb-4">
          {translations.homepage.join_community_title}
        </h3>
        <p class="text-lg md:text-xl mb-8 text-eggshell-900 leading-relaxed">
          {translations.homepage.join_community_description}
        </p>

        <div
          class="flex flex-col sm:flex-row gap-4 justify-center items-center"
        >
          <a
            href="https://tinyurl.com/dbmember"
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center px-8 py-4 bg-hunyadi_yellow-500 hover:bg-hunyadi_yellow-400 text-night rounded-lg font-semibold text-lg transition-colors duration-200 shadow-lg"
          >
            <Users class="w-6 h-6 mr-3" />
            {translations.buttons.register_member}
          </a>

          <span class="text-eggshell-900 font-medium"
            >{translations.common.or}</span
          >

          <a
            href="https://tinyurl.com/dbspesies"
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center px-8 py-4 bg-transparent border-2 border-eggshell-800 hover:bg-eggshell-800 hover:text-brunswick_green text-eggshell-900 rounded-lg font-semibold text-lg transition-colors duration-200 shadow-lg"
          >
            <Database class="w-6 h-6 mr-3" />
            {translations.buttons.contribute_dbspesies}
          </a>
        </div>

        <div class="mt-8 grid grid-cols-1 md:grid-cols-2 gap-6 text-left">
          <div class="bg-brunswick_green-700/30 rounded-lg p-6">
            <h4 class="font-semibold text-lg mb-2 text-hunyadi_yellow-800">
              {translations.labels.member_benefits}
            </h4>
            <ul class="text-eggshell-900 space-y-2">
              <li class="flex items-center">
                <Check class="w-4 h-4 mr-1" />
                {translations.benefits.exclusive_resources}
              </li>
              <li class="flex items-center">
                <Check class="w-4 h-4 mr-1" />
                {translations.benefits.priority_registration}
              </li>
              <li class="flex items-center">
                <Check class="w-4 h-4 mr-1" />
                {translations.benefits.networking}
              </li>
            </ul>
          </div>

          <div class="bg-brunswick_green-700/30 rounded-lg p-6">
            <h4 class="font-semibold text-lg mb-2 text-hunyadi_yellow-800">
              {translations.labels.dbspesies_project}
            </h4>
            <ul class="text-eggshell-900 space-y-2">
              <li class="flex items-center">
                <Check class="w-4 h-4 mr-1" />
                {translations.benefits.contribute_biodiversity}
              </li>
              <li class="flex items-center">
                <Check class="w-4 h-4 mr-1" />
                {translations.benefits.share_research}
              </li>
              <li class="flex items-center">
                <Check class="w-4 h-4 mr-1" />
                {translations.benefits.collaborate}
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>
    </div>
  </section>
</div>

<style>
  /* Mobile optimizations */
  @media (max-width: 640px) {
    .grid {
      grid-template-columns: 1fr;
    }

    article {
      padding: 1.25rem;
    }

    h3 {
      font-size: 1.125rem;
      line-height: 1.4;
    }

    .bg-gradient-to-r {
      padding: 2rem 1.5rem;
    }

    .flex-col.sm\:flex-row {
      gap: 1rem;
    }

    .inline-flex {
      width: 100%;
      justify-content: center;
    }

    @media (min-width: 640px) {
      .inline-flex {
        width: auto;
      }
    }
  }

  /* Focus states for accessibility */
  a:focus {
    outline: 2px solid #eabb66;
    outline-offset: 2px;
  }
</style>
