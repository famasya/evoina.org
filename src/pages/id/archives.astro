---
import { getCollection } from "astro:content";
import PageTitle from "../../components/PageTitle.astro";
import { getLocaleFromUrl } from "../../i18n";
import Layout from "../../layouts/Layout.astro";

const locale = getLocaleFromUrl(Astro.url);

// Get the archives page content for the current locale
const archivesPages = await getCollection("pages", ({ data }) => {
  return data.locale === locale;
});

const archivesPage = archivesPages.find((page) =>
  page.slug.endsWith("archives"),
);

if (!archivesPage) {
  throw new Error(`Archives page not found for locale: ${locale}`);
}

// Get posts for the current locale
const posts = await getCollection("archives", ({ data }) => {
  return data.locale === locale;
});
const categories = [...new Set(posts.map((post) => post.data.category))];

const sortedPosts = posts.sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);

const { Content } = await archivesPage.render();
---

<Layout title={archivesPage.data.title}>
  <PageTitle
    title={archivesPage.data.page_title}
    background={archivesPage.data.background}
  />

  <section class="py-12">
    <div class="container mx-auto px-4">
      <div class="flex flex-wrap gap-2 mb-8 justify-center">
        <a
          href={locale === "en" ? "/archives" : "/id/arsip"}
          class="px-4 py-2 rounded-full border transition-colors bg-gray-800 text-white border-gray-800"
        >
          {locale === "en" ? "All" : "Semua"}
        </a>
        {
          categories.map((category) => (
            <a
              href={`${locale === "en" ? "/archives" : "/id/arsip"}/${category}`}
              class="px-4 py-2 rounded-full border transition-colors bg-white text-gray-800 border-gray-200 hover:bg-gray-50 flex items-center gap-2"
            >
              {category}
            </a>
          ))
        }
      </div>

      <ul class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {
          sortedPosts.map((post) => (
            <div>
              <a
                href={`${locale === "en" ? "/post/" : "/id/post/"}${post.slug.split("/").pop() || post.slug}`}
                class="block border border-gray-200 rounded-lg overflow-hidden hover:shadow-md transition-shadow"
              >
                {post.data.image && (
                  <img
                    src={post.data.image}
                    alt={post.data.title}
                    class="w-full h-48 object-cover"
                  />
                )}
                <div class="p-6">
                  <p class="text-sm text-gray-500 mb-1 md:mb-2">
                    {post.data.category}
                  </p>
                  <h2 class="text-lg md:text-2xl font-serif mb-2">
                    {post.data.title}
                  </h2>
                  <p class="text-gray-600">
                    {locale === "en" ? "Published on:" : "Dipublikasikan pada:"}{" "}
                    {post.data.pubDate.toLocaleDateString(
                      locale === "en" ? "en-US" : "id-ID",
                    )}
                  </p>
                  <p class="md:text-lg">{post.data.description}</p>
                </div>
              </a>
            </div>
          ))
        }
      </ul>
    </div>
  </section>
</Layout>
