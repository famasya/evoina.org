---
import { getCollection } from "astro:content";
import PageTitle from "../../components/PageTitle.astro";
import { getLocaleFromUrl } from "../../i18n";
import Layout from "../../layouts/Layout.astro";

const locale = getLocaleFromUrl(Astro.url);

// Get the about page content for the current locale
const aboutPages = await getCollection("pages", ({ data }) => {
  return data.locale === locale;
});

const aboutPage = aboutPages.find((page) => page.slug.endsWith("about"));

if (!aboutPage) {
  throw new Error(`About page not found for locale: ${locale}`);
}

const { Content } = await aboutPage.render();
---

<Layout title={aboutPage.data.title}>
  <PageTitle
    title={aboutPage.data.page_title}
    background={aboutPage.data.background}
  />
  <main
    class="auto-padding my-6 rounded-md font-light text-lg prose prose-lg max-w-none"
  >
    <Content />
  </main>
</Layout>
