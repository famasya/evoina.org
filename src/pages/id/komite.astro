---
import { Mail, University } from "@lucide/astro";
import PageTitle from "../../components/page-title.astro";
import Layout from "../../layouts/Layout.astro";
const committeeChairs = [
  {
    name: "Dr. Arif Maulana",
    title: "Ketua",
    description:
      "Spesialis dalam taksonomi dan ekologi Arachnida Indonesia. Penelitiannya berfokus pada keanekaragaman laba-laba endemik dan perannya dalam ekosistem tropis Indonesia.",
    image: "/carousels/Arachnida_ArifMaulana.JPG",
    university: "Universitas Indonesia",
    contact: "arifmaulana@ises.org",
  },
  {
    name: "Dr. Nur Herjayanti",
    title: "Wakil Ketua",
    description:
      "Ahli herpetologi dan entomologi dengan fokus pada evolusi dan konservasi reptil dan serangga Indonesia. Aktif dalam penelitian keanekaragaman hayati Sulawesi.",
    image: "/carousels/Cuora_amboinensis_NurHerjayanti.JPG",
    university: "Institut Pertanian Bogor",
    contact: "nurherjayanti@ises.org",
  },
  {
    name: "Dr. Heru Handika",
    title: "Sekretaris",
    description:
      "Peneliti mamalia kecil Indonesia dengan keahlian dalam filogenetik molekuler dan biogeografi. Spesialisasi pada evolusi mamalia endemik Sulawesi dan Maluku.",
    image: "/carousels/Haeromys_minahasae_HeruHandika.jpg",
    university: "Louisiana State University",
    contact: "heruhandika@ises.org",
  },
  {
    name: "Dr. Daniel Lumbantobing",
    title: "Bendahara",
    description:
      "Iktiolog dengan fokus pada sistematika dan evolusi ikan air tawar Indonesia. Penelitiannya berkontribusi pada pemahaman diversifikasi ikan endemik Sulawesi.",
    image: "/carousels/Telmatherina_DanielLumbantobing.JPG",
    university: "Universitas Sam Ratulangi",
    contact: "daniellumbantobing@ises.org",
  },
  {
    name: "Dr. Sarah Botanica",
    title: "Koordinator Program",
    description:
      "Ahli botani evolusioner yang meneliti adaptasi tumbuhan tropis Indonesia. Berpengalaman dalam genomik komparatif dan ekologi molekuler tumbuhan hutan hujan.",
    image: "/carousels/Tylomelania_ArifMaulana.JPG",
    university: "Universitas Gadjah Mada",
    contact: "sarahbotanica@ises.org",
  },
];
---

<Layout title="Ketua Komite">
  <PageTitle
    title="Ketua Komite"
    background="/carousels/Haeromys_minahasae_HeruHandika.jpg"
  />

  <main class="auto-padding my-8 font-light">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 max-w-6xl mx-auto py-12">
      {
        committeeChairs.map((chair) => (
          <div class="flex flex-col items-center text-center p-6 border border-eggshell-500 rounded-xl">
            <div class="w-48 h-48 rounded-full overflow-hidden mb-4 border-8 shadow-sm border-eggshell-500">
              <img
                src={chair.image}
                alt={chair.name}
                class="w-full h-full object-cover"
              />
            </div>
            <h2 class="text-xl font-medium text-brunswick_green">
              {chair.name}
            </h2>
            <div class="text-gray-600">{chair.title}</div>
            <div class="text-gray-600 my-4 text-sm bg-eggshell-500 p-2 rounded-md">
              {chair.description}
            </div>
            <div class="flex flex-row items-center gap-2 text-gray-600">
              <University class="w-4 h-4" />
              {chair.university}
            </div>
            <div class="flex flex-row items-center gap-2 text-gray-600">
              <Mail class="w-4 h-4" />
              {chair.contact}
            </div>
          </div>
        ))
      }
    </div>
    <div class="text-center mt-8 bg-eggshell-500 p-8 rounded-xl">
      <h1 class="font-serif text-3xl">
        Tertarik menjadi bagian dari upaya ini?
      </h1>
      <p class="text-lg">
        Silakan lihat bagaimana Anda dapat berkontribusi dan pertimbangkan untuk
        bergabung dengan kami di sini:
      </p>
      <div class="mt-4">
        <a
          href="#"
          class="bg-brunswick_green text-white hover:bg-brunswick_green/90 transition-colors rounded-md px-6 py-3 font-semibold"
        >
          BERGABUNG
        </a>
      </div>
    </div>
  </main>
</Layout>
