---
import Button from "../../components/Button.astro";
import Hero from "../../components/HeroSimple.astro";
import { getLocaleFromUrl, loadTranslations } from "../../i18n";
import Layout from "../../layouts/Layout.astro";
import News from "../index/news.astro";
import ResearchActivities from "../index/research-activities.astro";

// Get current locale from URL
const currentLocale = getLocaleFromUrl(Astro.url);
const translations = await loadTranslations(currentLocale);
---

<Layout title="The Nature Place Day Camp">
  <Hero />
  <div class="m-16 flex flex-col md:flex-row items-center gap-8">
    <div class="relative w-full md:w-1/2">
      <img
        src="/carousels/Cuora_amboinensis_NurHerjayanti.JPG"
        class="h-full w-full object-cover rounded-xl"
      />
      <div
        class="absolute inset-0 bg-gradient-to-tl rounded-xl from-black/60 to-transparent"
      >
      </div>
    </div>
    <div class="w-full md:w-1/2">
      <h1 class="mb-8 font-serif text-2xl md:text-4xl">
        {translations.homepage.welcome_title}
      </h1>
      <p class="text-base md:text-lg">
        {translations.homepage.welcome_description}
      </p>
      <div class="mt-8">
        <Button title={translations.buttons.what_we_do} extendClass="px-8" />
      </div>
    </div>
  </div>

  <ResearchActivities />
  <News />
</Layout>
