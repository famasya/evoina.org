---
import { getCollection } from "astro:content";
import PageTitle from "../../components/PageTitle.astro";
import { getLocaleFromUrl } from "../../i18n";
import Layout from "../../layouts/Layout.astro";

const locale = getLocaleFromUrl(Astro.url);

// Get the programs page content for the current locale
const programsPages = await getCollection("pages", ({ data }) => {
  return data.locale === locale;
});

const programsPage = programsPages.find((page) =>
  page.slug.endsWith("programs"),
);

if (!programsPage) {
  throw new Error(`Programs page not found for locale: ${locale}`);
}

const { Content } = await programsPage.render();
---

<Layout title={programsPage.data.title}>
  <PageTitle
    title={programsPage.data.page_title}
    background={programsPage.data.background}
  />
  <main
    class="auto-padding my-6 rounded-md font-light text-lg prose prose-lg max-w-none"
  >
    <Content />
  </main>
</Layout>
