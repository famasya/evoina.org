---
import { Mail, University } from "@lucide/astro";
import PageTitle from "../components/PageTitle.astro";
import Layout from "../layouts/Layout.astro";
const committeeChairs = [
  {
    name: "Dr. Arif Maulana",
    title: "Chair",
    description:
      "Specialist in Indonesian Arachnida taxonomy and ecology. His research focuses on endemic spider diversity and their role in Indonesian tropical ecosystems.",
    image: "/carousels/Arachnida_ArifMaulana.JPG",
    university: "University of Indonesia",
    contact: "arifmaulana@ises.org",
  },
  {
    name: "Dr. Nur Herjayanti",
    title: "Vice Chair",
    description:
      "Herpetologist and entomologist focusing on evolution and conservation of Indonesian reptiles and insects. Active in Sulawesi biodiversity research.",
    image: "/carousels/Cuora_amboinensis_NurHerjayanti.JPG",
    university: "IPB University",
    contact: "nurherjayanti@ises.org",
  },
  {
    name: "Dr. Heru Handika",
    title: "Secretary",
    description:
      "Indonesian small mammal researcher with expertise in molecular phylogenetics and biogeography. Specializes in endemic mammal evolution of Sulawesi and Maluku.",
    image: "/carousels/Haeromys_minahasae_HeruHandika.jpg",
    university: "Louisiana State University",
    contact: "heruhandika@ises.org",
  },
  {
    name: "Dr. Daniel Lumbantobing",
    title: "Treasurer",
    description:
      "Ichthyologist focusing on systematics and evolution of Indonesian freshwater fish. His research contributes to understanding endemic fish diversification in Sulawesi.",
    image: "/carousels/Telmatherina_DanielLumbantobing.JPG",
    university: "Sam Ratulangi University",
    contact: "daniellumbantobing@ises.org",
  },
  {
    name: "Dr. Sarah Botanica",
    title: "Program Coordinator",
    description:
      "Evolutionary botanist researching Indonesian tropical plant adaptations. Experienced in comparative genomics and molecular ecology of rainforest plants.",
    image: "/carousels/Tylomelania_ArifMaulana.JPG",
    university: "Gadjah Mada University",
    contact: "sarahbotanica@ises.org",
  },
];
---

<Layout title="Committee Chairs">
  <PageTitle
    title="Committee Chairs"
    background="/carousels/Haeromys_minahasae_HeruHandika.jpg"
  />

  <main class="auto-padding my-8 font-light">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 max-w-6xl mx-auto py-12">
      {
        committeeChairs.map((chair) => (
          <div class="flex flex-col items-center text-center p-6 border border-eggshell-500 rounded-xl">
            <div class="w-48 h-48 rounded-full overflow-hidden mb-4 border-8 shadow-sm border-eggshell-500">
              <img
                src={chair.image}
                alt={chair.name}
                class="w-full h-full object-cover"
              />
            </div>
            <h2 class="text-xl font-medium text-brunswick_green">
              {chair.name}
            </h2>
            <div class="text-gray-600">{chair.title}</div>
            <div class="text-gray-600 my-4 text-sm bg-eggshell-500 p-2 rounded-md">
              {chair.description}
            </div>
            <div class="flex flex-row items-center gap-2 text-gray-600">
              <University class="w-4 h-4" />
              {chair.university}
            </div>
            <div class="flex flex-row items-center gap-2 text-gray-600">
              <Mail class="w-4 h-4" />
              {chair.contact}
            </div>
          </div>
        ))
      }
    </div>
    <div class="text-center mt-8 bg-eggshell-500 p-8 rounded-xl">
      <h1 class="font-serif text-3xl">
        Interested in being part of the effort?
      </h1>
      <p class="text-lg">
        Please take a look at how you can contribute and consider joining us
        here:
      </p>
      <div class="mt-4">
        <a
          href="#"
          class="bg-brunswick_green text-white hover:bg-brunswick_green/90 transition-colors rounded-md px-6 py-3 font-semibold"
        >
          JOIN US
        </a>
      </div>
    </div>
  </main>
</Layout>
